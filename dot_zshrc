function dmv() {
  duckdb -csv -c "select * from \"$1\";" /Users/jerry/source/masterbet/masterbet_duckdb/masterbet.duckdb | vd -f csv
}

if type brew &>/dev/null; then
  FPATH=$(brew --prefix)/share/zsh-completions:$FPATH

  autoload -Uz compinit
  compinit
fi

# NOTE: fzf-tab needs to be loaded after compinit, but before plugins which will wrap widgets, such as zsh-autosuggestions or fast-syntax-highlighting!!
# source /Users/jerry/github/Aloxaf/fzf-tab/fzf-tab.plugin.zsh
source /opt/homebrew/share/zsh-autosuggestions/zsh-autosuggestions.zsh
source /opt/homebrew/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
source /opt/homebrew/share/zsh-vi-mode/zsh-vi-mode.plugin.zsh

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

# so that zsh-vi-mode does not overwrite fzf keybindings
zvm_after_init_commands+=('[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh')
# so that zsh-vi-mode does not overwrite jumper keybindings
zvm_after_init_commands+=('source ~/github/homerours/jumper/shell/jumper.zsh')

# so that zsh-vi-mode does not overwrite vi-forward-word
zvm_after_lazy_keybindings ()
{
  bindkey '^w' vi-forward-word
}

eval "$(mise activate zsh)"
eval "$(starship init zsh)"
