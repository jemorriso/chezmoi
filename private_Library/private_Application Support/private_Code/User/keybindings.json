[
  /////////////////////////////////////////////////////////////////////////////
  // additions
  /////////////////////////////////////////////////////////////////////////////
  // alt
  {
    "key": "alt+h",
    "command": "workbench.action.navigateLeft"
  },
  {
    "key": "alt+l",
    "command": "workbench.action.navigateRight"
  },
  {
    "key": "alt+k",
    "command": "workbench.action.navigateUp"
  },
  {
    "key": "alt+j",
    "command": "workbench.action.navigateDown"
  },
  {
    "key": "alt+,",
    "command": "workbench.action.openSettingsJson"
  },
  {
    "key": "alt+=",
    "command": "workbench.action.increaseViewWidth"
  },
  {
    "key": "alt+-",
    "command": "workbench.action.decreaseViewWidth"
  },
  {
    "key": "alt+r",
    "command": "workbench.action.openRecent"
  },
  {
    "key": "alt+b",
    "command": "workbench.action.toggleActivityBarVisibility"
  },
  {
    "key": "alt+r",
    "command": "workbench.action.quickOpenNavigateNextInRecentFilesPicker",
    "when": "inQuickOpen && inRecentFilesPicker"
  },
  {
    "key": "alt+s",
    "command": "markdown.extension.editing.toggleStrikethrough",
    "when": "editorTextFocus && !editorReadonly && editorLangId =~ /^markdown$|^rmd$|^quarto$/"
  },
  // alt+ctrl
  {
    "key": "alt+ctrl+-",
    "command": "workbench.action.decreaseViewHeight"
  },
  {
    "key": "alt+ctrl+=",
    "command": "workbench.action.increaseViewHeight"
  },
  // alt+shift
  {
    "key": "alt+shift+z",
    "command": "workbench.action.toggleMaximizedPanel"
  },
  {
    "key": "alt+shift+g",
    "command": "chatgpt-vscode.view.focus"
  },
  {
    "key": "alt+shift+c",
    "command": "workbench.panel.chat.view.copilot.focus"
  },
  {
    "key": "alt+shift+enter",
    "command": "workbench.action.terminal.runSelectedText"
  },
  {
    "key": "alt+shift+2",
    "command": "editor.action.insertSnippet",
    "when": "editorTextFocus && editorLangId == 'markdown'",
    "args": {
      "langId": "markdown",
      "name": "Insert today's date as wikilink"
    }
  },
  // cmd+shift
  // markdown all-in-one uses cmd+b for toggle bold
  {
    "key": "cmd+shift+b",
    "command": "workbench.action.toggleSidebarVisibility",
    "when": "editorTextFocus && !editorReadonly && editorLangId =~ /^markdown$|^rmd$|^quarto$/"
  },
  // ctrl
  {
    "key": "ctrl+escape",
    "command": "workbench.action.focusActiveEditorGroup"
  },
  {
    "key": "ctrl+u",
    "command": "runCommands",
    "args": {
      "commands": [
        {
          "command": "editorScroll",
          "args": {
            "to": "up",
            "by": "halfPage"
          }
        },
        {
          "command": "cursorMove",
          "args": { "to": "viewPortCenter" }
        }
      ]
    },
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+d",
    "command": "runCommands",
    "args": {
      "commands": [
        {
          "command": "editorScroll",
          "args": {
            "to": "down",
            "by": "halfPage"
          }
        },
        {
          "command": "cursorMove",
          "args": { "to": "viewPortCenter" }
        }
      ]
    },
    "when": "editorTextFocus && neovim.init && neovim.mode != 'insert' && editorLangId not in 'neovim.editorLangIdExclusions'"
  },
  // ctrl+k prefix
  {
    "key": "ctrl+k ctrl+d",
    "command": "foam-vscode.open-daily-note"
  },
  {
    "key": "ctrl+k ctrl+s",
    "command": "workbench.action.openGlobalKeybindingsFile"
  },
  {
    "key": "ctrl+k ctrl+backspace",
    "command": "notifications.clearAll"
  },
  // ctrl+shift
  {
    "key": "ctrl+shift+enter",
    "command": "sqltools.executeCurrentQuery"
  },
  /////////////////////////////////////////////////////////////////////////////
  // removals
  /////////////////////////////////////////////////////////////////////////////
  {
    "key": "alt+h",
    "command": "-foam-vscode.open-daily-note-for-date"
  },
  {
    "key": "alt+h",
    "command": "-testing.toggleTestingPeekHistory",
    "when": "testing.isPeekVisible"
  },
  {
    "key": "space",
    "command": "-tidalcycles.sounds.play",
    "when": "listFocus && listHasSelectionOrFocus"
  },
  {
    "key": "escape",
    "command": "-tidalcycles.sounds.stop",
    "when": "listFocus && listHasSelectionOrFocus"
  },
  {
    "key": "ctrl+alt+h",
    "command": "-tidal.hush"
  },
  {
    "key": "ctrl+enter",
    "command": "-tidal.evalMulti"
  },
  {
    "key": "shift+enter",
    "command": "-tidal.eval"
  },
  {
    "key": "alt+d",
    "command": "-foam-vscode.open-daily-note"
  },
  {
    "key": "shift+cmd+e",
    "command": "-dbtPowerUser.summarizeQuery"
  },
  {
    "key": "shift+cmd+a",
    "command": "-dbtPowerUser.openDatapilotWithQuery"
  },
  {
    "key": "shift+cmd+c",
    "command": "-dbtPowerUser.changeQuery"
  }
]
