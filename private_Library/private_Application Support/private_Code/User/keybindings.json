// Place your key bindings in this file to override the defaults
[
  {
    "key": "alt+h",
    "command": "-foam-vscode.open-daily-note-for-date"
  },
  {
    "key": "alt+h",
    "command": "-testing.toggleTestingPeekHistory",
    "when": "testing.isPeekVisible"
  },
  {
    "key": "alt+h",
    "command": "workbench.action.navigateLeft"
  },
  {
    "key": "alt+l",
    "command": "workbench.action.navigateRight"
  },
  {
    "key": "alt+k",
    "command": "workbench.action.navigateUp"
  },
  {
    "key": "alt+j",
    "command": "workbench.action.navigateDown"
  },
  {
    "key": "shift+alt+z",
    "command": "workbench.action.toggleMaximizedPanel"
  },
  {
    "key": "shift+alt+enter",
    "command": "workbench.action.terminal.runSelectedText"
  },
  {
    "key": "alt+shift+2",
    "command": "editor.action.insertSnippet",
    "when": "editorTextFocus && editorLangId == 'markdown'",
    "args": {
      "langId": "markdown",
      "name": "Insert today's date as wikilink"
    }
  },
  {
    "key": "alt+=",
    "command": "workbench.action.increaseViewWidth"
  },
  {
    "key": "alt+-",
    "command": "workbench.action.decreaseViewWidth"
  },
  {
    "key": "ctrl+alt+-",
    "command": "workbench.action.decreaseViewHeight"
  },
  {
    "key": "ctrl+alt+=",
    "command": "workbench.action.increaseViewHeight"
  },
  {
    "key": "space",
    "command": "-tidalcycles.sounds.play",
    "when": "listFocus && listHasSelectionOrFocus"
  },
  {
    "key": "escape",
    "command": "-tidalcycles.sounds.stop",
    "when": "listFocus && listHasSelectionOrFocus"
  },
  {
    "key": "ctrl+alt+h",
    "command": "-tidal.hush"
  },
  {
    "key": "ctrl+enter",
    "command": "-tidal.evalMulti"
  },
  {
    "key": "shift+enter",
    "command": "-tidal.eval"
  },
  {
    "key": "alt+d",
    "command": "-foam-vscode.open-daily-note"
  },
  {
    "key": "shift+cmd+b",
    "command": "-workbench.action.tasks.build",
    "when": "taskCommandsRegistered"
  },
  {
    "key": "shift+cmd+b",
    "command": "workbench.action.toggleSidebarVisibility"
  }
]
